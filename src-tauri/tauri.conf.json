{
  "productName": "MasterDex",
  "version": "0.0.0",
  "identifier": "com.masterdex.dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Master Dex",
        "width": 800,
        "height": 600,
        "shadow": true,
        "minHeight": 600,
        "minWidth": 400,
        "userAgent": "masterdex"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}